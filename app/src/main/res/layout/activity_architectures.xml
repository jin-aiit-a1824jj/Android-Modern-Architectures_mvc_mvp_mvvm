<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ArchitecturesActivity">

    <Button
        android:id="@+id/buttonMVC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MVC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:onClick="onMVC"/>

    <Button
        android:id="@+id/buttonMVP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MVP"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMVC"
        android:layout_marginTop="10dp"
        android:onClick="onMVP"/>

    <Button
        android:id="@+id/buttonMVVM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MVVM"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMVP"
        android:layout_marginTop="10dp"
        android:onClick="onMVVM"/>

</androidx.constraintlayout.widget.ConstraintLayout>